{
  "name": "behive-monitoring-api",
  "version": "1.0.0",
  "description": "A comprehensive REST API for monitoring mobile beehive platforms in the IoT Lab in Kalmar. The API provides authenticated access to honeybee data and manages requests for mobile platform transport. Utilizes mock sensor data from the Beehive metrics dataset on Kaggle.",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --inspect -r dotenv/config src/server.js",
    "lint": "npx eslint ./src || exit 0",
    "lint:fix": "npx eslint ./src --fix || exit 0"
  },
  "author": "Sayaka Chishiki Jakobsson",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-http-context": "^1.2.4",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.2",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "unzipper": "^0.12.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@lnu/eslint-config": "^1.1.10",
    "nodemon": "^3.1.0"
  }
}
